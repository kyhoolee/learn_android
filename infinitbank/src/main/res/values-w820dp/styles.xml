<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeDarkAccent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomBarText">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontRegular" parent="@android:style/TextAppearance">
        <!--<item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>-->
    </style>

    <style name="FontBold" parent="@android:style/TextAppearance">
        <!--<item name="fontPath">fonts/RobotoCondensed-Bold.ttf</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontLight" parent="@android:style/TextAppearance">
        <!--<item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>-->
    </style>

    <style name="PopUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
</resources>
